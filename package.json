{
  "name": "waos-conventional-changelog",
  "version": "0.0.0-development",
  "description": "Commitizen adapter following the conventional-changelog format with emojis choice.",
  "keywords": [
    "commitlint",
    "conventional-changelog",
    "commitizen",
    "cz-cli",
    "emoji"
  ],
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "jest",
    "format": "prettier --write *.js",
    "semantic-release": "semantic-release"
  },
  "homepage": "https://github.com/WeAreOpenSourceProjects/waos-conventional-changelog",
  "repository": {
    "type": "git",
    "url": "https://github.com/WeAreOpenSourceProjects/waos-conventional-changelog.git"
  },
  "author": "Pierre Brisorgueil <brisorgueilp@gmail.com> for the fork, Jim Cummins <jimthedev@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "conventional-commit-types": "^3.0.0",
    "lodash.map": "^4.6.0",
    "longest": "^2.0.1",
    "right-pad": "^1.0.1",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "commitizen": "^4.0.3",
    "cosmiconfig": "^6.0.0",
    "husky": "^4.0.2",
    "jest": "^25.1.0",
    "mock-require": "^3.0.3",
    "prettier": "^1.19.1",
    "semantic-release": "^17.0.4",
    "semver": "^7.0.0",
    "waos-conventional-changelog": "^1.8.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/waos-conventional-changelog"
    }
  }
}
